<%- if Devise.mappings[:user].modules.include?(:omniauthable) && Flip.conrate_security_facebook? %>
  <%- Conratesecurity::User.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(:user, provider), title: "Sign in with #{provider.to_s.titleize}", id: provider do %>
      <% if provider == :facebook %>
        <span class="fa fa-facebook fa-5x providericon facebook"></span>
      <% elsif provider == :google_oauth2 %>
        <span class="fa fa-google fa-5x providericon google"></span>
      <% elsif provider == :twitter %>
        <span class="fa fa-twitter fa-5x providericon twitter"></span>
      <% end %>
    <% end %>
  <% end -%>
<% end -%>
